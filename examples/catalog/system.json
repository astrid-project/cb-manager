{
   "name": "metricbeat",
   "options": [
      {
         "name": "period",
         "type": "time-duration"
      },
      {
         "name": "metricset",
         "type": "choice",
         "value": [
            "core",
            "cpu",
            "load",
            "memory",
            "network",
            "process",
            "uptime",
            "process_memory",
            "socket_summary"
         ],
         "list": true
      }
   ],
   "config": [
      {
         "name": "/etc/metricbeat/metricbeat.yml",
         "type": "filename",
         "content": "..."
      }
   ],
   "recipe": {
      "start": [
         "sudo service metricbeat start"
      ],
      "stop": [
         "sudo service metricbeat stop"
      ],
      "install": [
         "curl -L -O https://artifacts.elastic.co/downloads/beats/metricbeat/metricbeat-7.3.0-amd64.deb",
         "sudo dpkg -i metricbeat-7.3.0-amd64.deb",
         "rm metricbeat-7.3.0-amd64.deb"
      ],
      "uninstall": [
         "sudo apt-get purge metricbeat"
      ]
   }
}