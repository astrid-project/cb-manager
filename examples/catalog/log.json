{
   "name": "filebeat",
   "options": [
      {
         "name": "polling",
         "type": "time-duration"
      },
      {
         "path": "paths",
         "type": "string",
         "list": true
      },
      {
         "name": "encoding",
         "type": "choice",
         "value": [
            "plain",
            "utf-8"
         ]
      },
      {
         "name": "exclude_lines",
         "type": "string",
         "list": true
      },
      {
         "name": "include_lines",
         "type": "string",
         "list": true
      },
      {
         "name": "multiline",
         "type": "obj",
         "value": [
            {
               "name": "pattern",
               "type": "string"
            },
            {
               "name": "negate",
               "type": "boolean"
            },
            {
               "name": "match",
               "type": "choice",
               "value": [
                  "after",
                  "before"
               ]
            }
         ]
      },
      {
         "name": "tail_files",
         "type": "boolean"
      }
   ],
   "config": [
      {
         "name": "/etc/filebeat/filebeat.yml",
         "type": "filename",
         "content": "..."
      }
   ],
   "recipe": {
      "start": [
         "sudo service filebeat start"
      ],
      "stop": [
         "sudo service filebeat stop"
      ],
      "install": [
         "curl -L -O https://artifacts.elastic.co/downloads/beats/filebeat/filebeat-7.3.0-amd64.deb",
         "sudo dpkg -i filebeat-7.3.0-amd64.deb",
         "rm filebeat-7.3.0-amd64.deb"
      ],
      "uninstall": [
         "sudo apt purge filebeat"
      ]
   }
}