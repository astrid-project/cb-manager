{
    "name": "filebeat",
    "parameters": [{
            "name": "period",
            "type": "string",
            "recipe": {
                "parameters": {
                    "name": "backoff",
                    "destination": "~/guard-framework/env/filebeat/config/inputs/log.yml",
                    "sep": ": ",
                    "value": "{value}"
                }
            }
        },
        {
            "name": "enabled",
            "type": "boolean",
            "recipe": {
                "parameters": {
                    "name": "enabled",
                    "destination": "~/guard-framework/env/filebeat/config/inputs/log.yml",
                    "sep": ": ",
                    "value": "{value}"
                }
            }
        }
    ],
    "actions": [{
            "name": "install",
            "recipe": {
                "actions": [{
                        "cmd": "mkdir",
                        "args": [
                            "-p",
                            "~/guard-framework/env/src"
                        ]
                    },
                    {
                        "cmd": "curl",
                        "args": [
                            "--user",
                            "${USERNAME}:${PASSWORD}",
                            "http://${HOST}:${PORT}/pkg/filebeat.tar.gz",
                            "--output",
                            "~/guard-framework/env/src/filebeat.tar.gz"
                        ]
                    },
                    {
                        "cmd": "tar",
                        "args": [
                            "-xzf",
                            "~/guard-framework/env/src/filebeat.tar.gz",
                            "-C",
                            "~/guard-framework/env"
                        ]
                    },
                    {
                        "cmd": "rm",
                        "args": [
                            "~/guard-framework/env/src/filebeat.tar.gz"
                        ]
                    }
                ]
            }
        },
        {
            "name": "uninstall",
            "recipe": {
                "actions": {
                    "cmd": "rm",
                    "args": [
                        "-rf",
                        "~/guard-framework/env/filebeat"
                    ]
                }
            }
        },
        {
            "name": "start",
            "recipe": {
                "actions": {
                    "cmd": "~/guard-framework/env/filebeat/filebeat",
                    "args": [
                        "-c",
                        "~/guard-framework/env/filebeat/config/filebeat.yml",
                        "-e"
                    ]
                }
            }
        },
        {
            "name": "stop",
            "recipe": {
                "actions": {
                    "cmd": "killall",
                    "args": [
                        "-s",
                        "SIGTERM",
                        "filebeat"
                    ]
                }
            }
        }
    ]
}